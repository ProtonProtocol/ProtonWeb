{
    "compilerOptions": {
        "declaration": true,
        "lib": ["esnext", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib",
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "esnext",
        "strict": true,
        "noImplicitAny": false
    },
    "include": ["src/*"]
}
