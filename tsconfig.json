{
  "compilerOptions": {
    "target": "es2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": "packages",
    "paths": {
      "~proton-browser-transport/*": ["proton-browser-transport/src/*"],
      "~proton-link/*": ["proton-link/src/*"],
      "~proton-signing-request/*": ["proton-signing-request/src/*"],
      "~proton-web-sdk/*": ["proton-web-sdk/src/*"]
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "incremental": true,
    "resolveJsonModule": true
  }
}
